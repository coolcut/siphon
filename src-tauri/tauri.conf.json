{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "siphon",
  "version": "0.1.0",
  "identifier": "work.jan.siphon",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "siphon",
        "width": 1280,
        "height": 860,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "trafficLightPosition": { "x": 12, "y": 30 },
        "windowEffects": {
          "effects": ["underWindowBackground"],
          "state": "followsWindowActiveState"
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
